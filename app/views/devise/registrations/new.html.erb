

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-xs w-full bg-slate-800 shadow-md rounded px-8 pt-6 pb-6 mb-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex flex-wrap -mx-3">

    <div class="w-full md:w-1/2 px-1">
      <%= f.label :first_name, class: "text-white uppercase tracking-wide text-xs font-bold", for: "first_name" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", id: "first_name" %>
    </div>

    <div class="w-full md:w-1/2 px-1">
      <%= f.label :last_name, class: "text-white uppercase tracking-wide text-xs font-bold", for: "last_name" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= f.label :phone, class: "text-white uppercase tracking-wide text-xs font-bold", for: "phone" %><br />
        <%= f.phone_field :phone, autofocus: true, autocomplete: "phone", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>

      <div class="w-full px-3">
        <%= f.label :email, class: "text-white uppercase tracking-wide text-xs font-bold", for: "email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>


      <div class="w-full px-3">
        <%= f.label :password, class: "text-white uppercase tracking-wide text-xs font-bold" %>
        <% if @minimum_password_length %>
        <em class="text-white text-xs font-bold">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>

      <div class="w-full px-3">
        <%= f.label :password_confirmation, class: "text-white uppercase tracking-wide text-xs font-bold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
    </div>


  </div>
      <div class="text-center">
      <%= f.submit "Sign up", class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center text-white text-center" %>
    </div>
<% end %>

</div>
</div>
