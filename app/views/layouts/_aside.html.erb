<aside id="logo-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0" aria-label="Sidebar">
  <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
    <%= image_tag "logo_polyclinic" %>
    <% if user_signed_in? || doctor_signed_in? %>
      <div class="flex flex-col items-center">
        <% if user_signed_in? %>
          <h4 class="font-medium text-gray-800 dark:text-gray-200">Patient of Polyclinic</h4>
          <h4 class="font-medium text-gray-800 dark:text-gray-200"><%= current_user.first_name %> <%= current_user.last_name %></h4>
          <p class="mx-2 mt-1 text-sm font-medium text-gray-600 dark:text-gray-400 mb-2"><%= current_user.email %></p>
        <% elsif doctor_signed_in? %>
          <h4 class="font-medium text-gray-800 dark:text-gray-200">Doctor of Polyclinic</h4>
          <h4 class="font-medium text-gray-800 dark:text-gray-200"><%= current_doctor.first_name %> <%= current_doctor.last_name %></h4>
          <p class="mx-2 mt-1 text-sm font-medium text-gray-600 dark:text-gray-400 mb-2"><%= current_doctor.phone %></p>
        <% end %>
        <%= button_to destroy_user_session_path, method: :delete, form: { turbolink: false } do %>
          <svg aria-hidden="true" class="flex-shrink-0 w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"></path></svg>
